<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_TABLE1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:orientation="vertical"
        android:padding="@dimen/table_padding" >

        <RelativeLayout
            android:id="@+id/layout_defultnumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/tv_defultnumber"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="默认答题数量：      " />

            <TextView
                android:id="@+id/defultnumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_defultnumber"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="20" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_defulttime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/tv_defulttime"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="默认答题时间(S)： " />

            <TextView
                android:id="@+id/defulttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_defulttime"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="20" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_TABLE2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:orientation="vertical"
        android:padding="@dimen/table_padding" >

        <RelativeLayout
            android:id="@+id/layout_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/tv_1"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="限时答题数量：      " />

            <EditText
                android:id="@+id/excerisenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_1"
                android:inputType="number"
                android:maxLength="20" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_timer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/tv_2"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="答题时间限制(S)： " />

            <EditText
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_edittext_height"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_2"
                android:inputType="number"
                android:maxLength="20" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_TABLE3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:orientation="vertical"
        android:padding="@dimen/table_padding" >

        <RelativeLayout
            android:id="@+id/layout_lefttime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/tv_3"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="答题剩余时间(S)： " />

            <TextView
                android:id="@+id/lefttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tv_3"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLength="20" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_TABLE4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:orientation="vertical"
        android:padding="@dimen/table_padding" >

        <RelativeLayout
            android:id="@+id/layout_general"
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <LinearLayout
                android:id="@+id/llBtnGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnDefultStart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="@color/button_background"
                    android:text="默认设置答题"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="@color/button_background"
                    android:text="自定义答题"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_weight="1"
                    android:background="@color/button_background"
                    android:text="重置"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>