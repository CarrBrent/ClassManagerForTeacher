<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >
<!-- android:layout_weight 作用是确定同一个LinearLayout中 RelativeLayout所占比重，即大小比例-->
            <RelativeLayout
                android:id="@+id/layout_1"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/blockshape" >

                <TextView
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="30dp"
                    android:drawableBottom="@drawable/evaluate1"
                    android:gravity="center_horizontal"
                    android:text="组内评价" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_2"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:background="@drawable/blockshape" >

                <TextView
                     android:drawablePadding="10dp"
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@drawable/evaluate2"
                    android:gravity="center_horizontal"
                    android:text="组间评价" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <RelativeLayout
                android:id="@+id/layout_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@drawable/blockshape"
                android:padding="20dp" >

                <TextView
                    style="@style/text_white_bold_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@drawable/evaluate3"
                    android:drawablePadding="30dp"
                    android:gravity="center_horizontal"
                    android:text="教师评价" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>